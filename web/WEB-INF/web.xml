    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>org.servlets.index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>org.servlets.contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.servlets.login</servlet-class>
    </servlet>
    <servlet>
